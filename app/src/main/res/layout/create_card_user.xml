<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30sp"
        android:text="Nouvelle recherche ..."
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="#FFFFFF"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Identifiant"
        android:id="@+id/new_card_login"
        android:layout_marginTop="20sp"
        android:background="@drawable/bordure_layout_simple"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:id="@+id/new_card_email"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_activity"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"

        ></Spinner>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ActivitÃ©"
        android:id="@+id/new_card_activity"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"
        />-->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_city"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"

        ></Spinner>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ville"
        android:id="@+id/new_card_city"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"
        />-->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_level"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"

        ></Spinner>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Niveau"
        android:id="@+id/new_card_level"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"
        />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comentaire"
        android:id="@+id/new_card_comment"
        android:layout_marginTop="10sp"
        android:background="@drawable/bordure_layout_simple"
        />

    <Button
        android:id="@id/button_create_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30sp"
        android:onClick="onCreateResearchCard"
        android:text="Ok"
        android:background="@drawable/button_layout"

        />

        

    </LinearLayout>
</ScrollView>