<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Résultats ..."
            android:textSize="20dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bordure_layout"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:gravity="center"
                    android:id="@+id/detail_text_view_pseudo"
                    android:hint="Identifiant"
                    android:textSize="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    />



            </LinearLayout>





        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    >

            <TextView

                android:layout_gravity="center"
                android:id="@+id/detail_text_view_sport"
                android:hint="Activité"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingEnd="10dp"

                />

            <TextView

                android:layout_gravity="center"
                android:id="@+id/detail_text_view_ville"
                android:hint="Ville"
                android:textSize="18dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingEnd="10dp"

                />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/detail_text_view_level"
                        android:hint="Niveau"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingEnd="10dp"

                        />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/detail_text_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:hint = "email"
                android:textStyle="italic"

                />

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <TextView
    android:id="@+id/detail_text_view_comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:textSize="18dp"
    android:hint = "Aucun commentaire"
    android:textStyle="italic"
    />

</LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/list_view_associatedCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>



    </LinearLayout>



</LinearLayout>