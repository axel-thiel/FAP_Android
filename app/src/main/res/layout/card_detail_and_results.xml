<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RÃ©sultats ..."
            android:textSize="20dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bordure_layout"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:layout_gravity="center"
                    android:id="@+id/detail_text_view_sport"
                    android:hint="Sport"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    />

                <TextView

                    android:layout_gravity="center"
                    android:id="@+id/detail_text_view_ville"
                    android:hint="Ville"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/detail_text_view_pseudo"
                    android:hint="Pseudo"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingEnd="10dp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/detail_image_user_fiche"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3"

                    />

            </LinearLayout>





        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:layout_gravity="center"
                        android:id="@+id/detail_text_view_dateIn"
                        android:hint="dateIn"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        />

                    <TextView

                        android:layout_gravity="center"
                        android:id="@+id/detail_text_view_dateOut"
                        android:hint="dateOut"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/detail_text_view_niveau"
                        android:hint="niveau"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        />

                    <TextView

                        android:layout_gravity="center"
                        android:id="@+id/detail_text_view_pretbesoin"
                        android:hint="pretbesoin"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        />

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/detail_text_view_commentaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:text="Commentaires ..."
        />

</LinearLayout>





</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

        <ListView
            android:id="@+id/list_view_associatedCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </ListView>
    </LinearLayout>




</LinearLayout>