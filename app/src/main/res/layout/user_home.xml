<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/multisport_redim">

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Vos recherches d'activités :"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="#FFFFFF"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="right"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle recherche"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:onClick="onCreateNewCard"
        android:background="@drawable/button_layout"
        android:textSize="12dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Déconnexion"
        android:gravity="end"
       android:layout_marginLeft="10dp"
        android:onClick="onDisconnect"
        android:background="@drawable/button_layout"
        android:textSize="12dp"
        />
</LinearLayout>

    <ListView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_card_list"

        />

</LinearLayout>